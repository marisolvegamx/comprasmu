<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.gasto.RevReciboActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/rrtoolbarinf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rrtoolbarinf">

        <LinearLayout
            android:id="@+id/llrrweb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <WebView
            android:id="@+id/rrwebView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        </WebView>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/comentarios" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.example.comprasmu.utils.Preguntasino
                android:id="@+id/rrsinoacuerdo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/txtrrcomentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnrrenviar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enviar" />
        </LinearLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btnrrdescargar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descargar"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>