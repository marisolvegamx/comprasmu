                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="?android:attr/scrollbarThumbHorizontal" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView29"
