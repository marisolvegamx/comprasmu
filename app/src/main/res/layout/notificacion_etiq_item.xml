<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="10dp">
    <data >
        <import type="com.example.comprasmu.utils.Constantes"/>
        <import type="com.example.comprasmu.utils.ComprasUtils"/>
        <import type="android.view.View"/>
        <variable name="detalle"
            type="com.example.comprasmu.data.modelos.InformeEtapa"></variable>
        <variable name="producto"
            type="com.example.comprasmu.data.modelos.InformeEtapaDet"></variable>
        <variable
            name="sdf"
            type="java.text.SimpleDateFormat" />

    </data>

    <androidx.cardview.widget.CardView

        android:id="@+id/ldcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtiecindice"
                style="@style/textolista1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text='@{detalle.indice!=null?ComprasUtils.indiceLetra(detalle.indice):""}'
                android:visibility="visible" />
            <TextView
                android:id="@+id/txtieccliente"
                style="@style/textolista2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{detalle.clienteNombre}" />
            <TextView
                android:id="@+id/txtiecplanta"
                style="@style/textolista2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{detalle.ciudadNombre}" />


            <TextView
                android:id="@+id/txtiecetapa"
                style="@style/textolista2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{Constantes.ETAPAS[detalle.etapa]}" />

            <TextView
                android:id="@+id/ic_txtiecid"
                style="@style/textolista2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text='@{String.valueOf(detalle.id)}'
                android:visibility="gone" />


            <TextView
                android:id="@+id/txtiecestatusmen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text='@{detalle.estatus==0?"ELIMINADO":Constantes.ESTATUSINFORME[detalle.estatus]}' />

            <TextView
                android:id="@+id/txtecmenemp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/capturar_inf"
                android:visibility="@{detalle.etapa==4? View.VISIBLE: View.GONE}"/>

            <Button
                android:id="@+id/btnecagregar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_muestra"
                android:visibility="@{detalle.etapa==3&amp;&amp;detalle.estatus==1? View.VISIBLE: View.GONE}"/>

            <Button
                android:id="@+id/btneccontinuar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/agregar_muestra"
                android:visibility="@{detalle.etapa==3&amp;&amp;detalle.estatus==4? View.VISIBLE: View.GONE}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtiecestatus"
                    style="@style/textolistagris"
                    android:layout_width="168dp"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:layout_weight="4"
                    android:visibility="gone"
                    android:text="@{Constantes.ESTATUSINFORME[detalle.estatus]}" />



            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>